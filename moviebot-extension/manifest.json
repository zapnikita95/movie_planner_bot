        "*://rezka.org/*",
        "*://rezka.pro/*",
        "*://rezka.ru/*",
        "*://rezka.site/*",
        "*://rezka.tv/*",
        "*://rezka.website/*",
        "*://*.lordfilm.ru/*",
        "*://lordfilm.ru/*",
        "*://*.lordfilm.com/*",
        "*://lordfilm.com/*",
        "*://mc.lordfilm132.ru/*",
        "*://*.lordfilm132.ru/*",
        "*://allserial.my/*",
        "*://*.allserial.my/*",
        "*://allserial.org.ru/*",
        "*://*.allserial.org.ru/*",
        "*://besplatno.allserial.org.ru/*",
        "*://boxserial.org/*"
      ],
      "js": ["content/content-streaming.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
